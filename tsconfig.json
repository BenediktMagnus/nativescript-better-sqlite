{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2018",

        "outDir": "lib",

        "declaration": true,
        "sourceMap": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "skipLibCheck": true,

        "strict": true,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
        "noUnusedParameters": true,

        "removeComments": true,

        "lib": [
            "ES2018"
        ],
    },
    "include": [
		"src/**/*.ts"
	],
    "exclude": [
        "node_modules"
    ]
}
