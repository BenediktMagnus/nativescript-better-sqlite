{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",

        "declaration": true,
        "sourceMap": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "skipLibCheck": true,

        "strict": true,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
        "noUnusedParameters": true,

        "removeComments": true,

        "lib": [
            "es6",
            "dom"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}
